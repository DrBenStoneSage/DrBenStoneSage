---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const { title, noSectionWrapper = false } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <div class="landscape-decor" aria-hidden="true">
      <img src="/assets/landscape.svg" alt="" />
    </div>
    {
      noSectionWrapper ? (
        <slot />
      ) : (
        <main class="page-section">
          <slot />
        </main>
      )
    }
  </body>
</html>
