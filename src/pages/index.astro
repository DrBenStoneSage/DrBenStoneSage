---
import Layout from '../layouts/BaseLayout.astro';
---

<Layout title="DrBenStoneSage">
  <section class="splash">
    <h1>Welcome to DrBenStoneSage</h1>
    <p>Game dev. Music. Mischief. Mystery.</p>

    <nav class="socials">
	  <a href="https://drbenstonesage.substack.com/" target="_blank">Substack Blog</a>
      <a href="https://twitch.tv/drbenstonesage" target="_blank">Twitch</a>
      <a href="https://instagram.com/drbenstonesage" target="_blank">Instagram</a>
      <a href="https://patreon.com/drbenstonesage" target="_blank">Patreon</a>
    </nav>
  </section>

  <style>
    .splash {
      max-width: 800px;
      margin: 5rem auto;
      padding: 2rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 1rem;
      text-align: center;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
    }

    .socials {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 1rem;
    }

    .socials a {
      color: #002200;
      text-decoration: none;
      font-weight: bold;
      background: #ccffcc;
      padding: 0.5rem 1rem;
      border-radius: 8px;
      transition: background 0.2s ease-in-out;
    }

    .socials a:hover {
      background: #b3ffb3;
    }
  </style>
</Layout>
