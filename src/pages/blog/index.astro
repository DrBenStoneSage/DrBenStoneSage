---
import Layout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog">
  <h1>Blog</h1>
  <p>Essays, updates, insights â€” the inner workings of DrBenStoneSage.</p>

  <ul>
    {posts.map(post => (
      <li>
        <a href={`/blog/${post.slug}/`} style="display: block; margin: 1rem 0;">
          <strong>{post.data.title}</strong><br />
          <small>{post.data.date}</small><br />
          <em>{post.data.summary}</em>
        </a>
      </li>
    ))}
  </ul>
</Layout>
